@model IEnumerable<THI_Analysis.Models.THI_AnalysisFeedback>

@{ 
    SelectList Select = ViewBag.Project;
    ViewBag.Project = Select.OrderBy(a => a.Text);
}

<div class="content-wrapper" id="indexSection">

    <!-- Main content -->
    <!-- Work begins here -->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
                        
          <section class="content-header" id="introduction">
              <h1>
                  THI Data Logs
                  <small>Filter by Projects</small> 
              </h1>
          </section>

          <br/>

          <div class="form-group col-md-6">
              @Html.DropDownList("Project", null, htmlAttributes: new { @class = "form-control" })
          </div>

          <div class="form-group col-md-2">
              <button type="submit" class="btn btn-block btn-primary" value="Index">Submit</button>
          </div>

    }

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Member THI Analysis</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline">
                            
                                <div class="col-sm-12">

                                    <table id="thi-member-data" class="table table-bordered table-hover">

                                    <thead>
                                        <tr>

                                            <th>
                                                @Html.DisplayNameFor(model => model.SalesforceProject.ProjectName)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.BusinessAnalyst)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.AnalysisNotes)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.AnalysisCreatedDate)
                                            </th>
                                        </tr>

                                    </thead>
                                        
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr id="@Html.DisplayFor( modelItem => item.AnalysisFeedbackKey)">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SalesforceProject.ProjectName)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.BusinessAnalyst)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AnalysisNotes)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AnalysisCreatedDate)
                                                    </td>

                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- /.col -->
           </div>

        <!-- /.row -->
    </section>

    <!-- /.content -->
</div>